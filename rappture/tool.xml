<?xml version="1.0"?>
<run>
  <tool>
    <title>Composite Filament Simulation 3D</title>
    <about>Description and credits</about>
    <command>
      python @tool/model.py @driver
    </command>
    <limits>
      <cputime>900</cputime>
    </limits>
    <action><label>Simulate</label></action>
    <layout>xxx</layout>
    <control>manual-resim</control>
    <uq>true</uq>
    <analyzer>xxx</analyzer>
    <reportJobFailures>1</reportJobFailures>
  </tool>
  <input>
    <number id="diameter">
      <about> <label>The diameter of the nanowires in nanometers</label> </about>
      <default>90.9</default>
    </number>
    <number id="length">
      <about> <label>The length of the nanowires in micrometers</label> </about>
      <default>20</default>
    </number>
    <number id="volume_fraction">
      <about> <label>The % volume of nanowires</label> </about>
      <default>1</default>
    </number>
    <number id="alignment_factor">
      <about> <label>The alignment factor of nanowires</label> </about>
      <default>1</default>
    </number>    
  </input>
</run>